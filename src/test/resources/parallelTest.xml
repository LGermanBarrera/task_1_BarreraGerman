<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Parallel Testing" thread-count="3" parallel="methods">

    <test verbose="1" name="safari">
        <parameter name="platform" value="MAC"/>
        <parameter name="browserName" value="safari"/>
        <parameter name="remoteUrl" value="http://192.168.50.100:4444/wd/hub/"/>
        <classes>
            <class name="com.amazonWebTests.BurgerButtonTest">
                <methods>
                    <include name="burgerButtonTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="2" name="chrome">
        <parameter name="platform" value="MAC"/>
        <parameter name="browserName" value="chrome"/>
        <parameter name="remoteUrl" value="http://192.168.50.100:4444/wd/hub/"/>
        <classes>
            <class name="com.amazonWebTests.BurgerButtonTest">
                <methods>
                    <include name="burgerButtonTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="3" name="firefox">
        <parameter name="platform" value="MAC"/>
        <parameter name="browserName" value="firefox"/>
        <parameter name="remoteUrl" value="http://192.168.50.100:4444/wd/hub/"/>
        <classes>
            <class name="com.amazonWebTests.BurgerButtonTest">
                <methods>
                    <include name="burgerButtonTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>